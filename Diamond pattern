
#include <stdio.h>

int main() {
   int n,i,j;
   scanf("%d",&n);
   for(i=1;i<=n;i++){
       for(j=0;j<=n-i;j++){
           printf("*");
       }
         for(j=1;j<i;j++){
             if(j!=i){
                     printf("  ");
             }
            
         }
          for(j=0;j<=n-i;j++){
           printf("*");
       }
         printf("\n");
   }
  for(i=2;i<=n;i++){
      for(j=2;j<=i+1;j++){
             printf("*");
      }  
         for(j=n;j>i;j--){
             if(j!=i){
                     printf("  ");
             }
            
         }
       
       for(j=2;j<=i+1;j++){
             printf("*");
      }
       printf("\n");
  }
    return 0;
}
